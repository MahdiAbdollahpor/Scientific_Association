@using ServiceLayer.Services.Interfaces
@inject IIdentityService _identityService;

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClientSide</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClientSide.styles.css" asp-append-version="true" />

    <!--sweet alert-->
    <link href="~/lib/swal/swal.css" rel="stylesheet" />

    <!-- Bootstrap RTL CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
</head>
<body style="background-color: #f8f9fb;">

    <div>
        <input id="message1" type="hidden" value="@TempData["success"]" />
        <input id="message2" type="hidden" value="@TempData["error"]" />
        <input id="message3" type="hidden" value="@TempData["info"]" />
        <input id="message4" type="hidden" value="@TempData["warning"]" />
    </div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ClientSide</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item signin-btn">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="RegisterByMobile">ثبت نام </a>   

                            </li>

                            <li class="nav-item signin-btn">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="LoginByMobile">ورود </a>

                            </li>

                        }
                        else
                        {
                            <li class="nav-item signin-btn">
                                <a asp-controller="UserPanel" asp-action="Dashboard" class="nav-link">
                                    <i class="la la-sign-in"></i>
                                    <span>@_identityService.GetDisplayNameByPhoneNumber(User.Identity.Name)</span>
                                </a>

                            </li>
                        }

                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div  class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ClientSide - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <partial name="_SiteMessage" />

    @await RenderSectionAsync("scripts", required: false)
</body>
</html>
