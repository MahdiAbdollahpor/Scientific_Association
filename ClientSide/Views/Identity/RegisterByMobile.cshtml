@using ServiceLayer.ViewModels.IdentityViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "RegisterByMobile";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
    
}
<style>
    .parent {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        grid-template-rows: repeat(5, 1fr);
        grid-column-gap: 0px;
        grid-row-gap: 0px;
        
    }

    .div1 {
        grid-area: 1 / 1 / 5 / 6;
        
    }
</style>

<section>

    <div class="parent">
        <div class="div1">
            <div  class="container">
                <div class="row justify-content-center">
                    <div class="col-md-5">
                        <div class="login-container bg-white rounded-3 p-4 p-md-5">
                            <div class="login-header text-center mb-4">
                                <h1 class="h3 mb-2">ایجاد حساب کاربری</h1>
                                <p class="text-muted">لطفا اطلاعات خود را وارد نمایید</p>
                            </div>

                            <form  method="post" asp-action="RegisterByMobile">
                             <div class="row">
                                <div class="mb-3 col-12">
                                    <label asp-for="firstName"  class="form-label">نام </label>
                                    <input type="text" asp-for="firstName" class="form-control" id="username" >
                                    <span asp-validation-for="firstName " class="text-danger"></span>
                                </div>

                                <div class="mb-3 col-12">
                                    <label asp-for="lastName" class="form-label">نام خانوادگی</label>
                                    <input type="text" asp-for="lastName" class="form-control" id="username" >
                                    <span asp-validation-for="lastName " class="text-danger"></span>
                                </div>

                                <div class="mb-3 col-12">
                                    <label asp-for="PhoneNumber" class="form-label">شماره تماس</label>
                                    <input type="text" asp-for="PhoneNumber" class="form-control" id="username" >
                                    <span asp-validation-for="PhoneNumber " class="text-danger"></span>
                                </div>

                                <div class="mb-3 col-12">
                                    <label asp-for="nationalCode" class="form-label">کد ملی</label>
                                    <input type="text" asp-for="nationalCode" class="form-control" id="username" >
                                    <span asp-validation-for="nationalCode " class="text-danger"></span>
                                </div>

                                <div class="mb-3 col-12">
                                    <label asp-for="studentNumber" class="form-label">کد دانشجویی</label>
                                    <input type="text" asp-for="studentNumber" class="form-control" id="username" >
                                    <span asp-validation-for="studentNumber " class="text-danger"></span>
                                </div>


                                <div class="mb-3 col-12">
                                    <label asp-for="Password" class="form-label">رمز عبور</label>
                                    <input asp-for="Password" type="Password" class="form-control" id="password" >
                                    <span asp-validation-for="Password " class="text-danger"></span>
                                </div>

                                <div class="mb-3 col-12">
                                    <label asp-for="RePassword" class="form-label">رمز عبور</label>
                                    <input asp-for="RePassword" type="Password" class="form-control" id="password" >
                                    <span asp-validation-for="RePassword " class="text-danger"></span>
                                </div>

                                @* <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="remember">
                                        <label class="form-check-label" for="remember">مرا به خاطر بسپار</label>
                                    </div>
                                    <div class="forgot-password">
                                        <a href="#">رمز عبور را فراموش کرده‌ام</a>
                                    </div>
                                </div> *@

                                <button type="submit" class="btn btn-primary w-100 py-2 mb-3">ثبت نام</button>

                                <div class="signup-link text-center">
                                        حساب کاربری دارید؟ <a asp-controller="Identity" asp-action="LoginByMobile">ورود  کنید</a>
                                </div>
                             </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>

   
  

   

</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}