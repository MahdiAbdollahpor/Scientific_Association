@using ServiceLayer.PublicClasses
@using ServiceLayer.ViewModels.AdminViewModels
@using ServiceLayer.ViewModels.BaseViewModels
@model BaseFilterViewModel<EventViewModel>
@{
    ViewData["Title"] = "مدیریت همایش‌ها";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

<div class="flex-1 overflow-auto p-6">
    <div class="content-area" id="events-content">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-800">مدیریت همایش‌ها</h2>

            <div class="flex space-x-3">
                <!-- Search Box -->
                <div class="relative">
                    <form method="get" id="formFilter">
                        <input hidden value="@Model.PageIndex" id="pageId" name="pageId" />
                        <input type="text" id="event-search" placeholder="جستجوی همایش..."
                               class="pr-10 pl-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                            <i class="fas fa-search text-gray-400"></i>
                        </div>
                    </form>
                </div>

                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus ml-2"></i>
                    افزودن همایش جدید
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="event-container">
            @foreach (var item in Model.Entities)
            {
                <div class="event-card bg-white rounded-lg shadow overflow-hidden">
                    <img src="@(item.ImagePath ?? "https://via.placeholder.com/400x300")"
                         alt="@item.Title" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="font-bold text-lg mb-2">@item.Title</h3>
                        <div class="flex justify-between items-center mb-2">
                            <span class="text-sm text-gray-600">
                                <i class="fas fa-users ml-1"></i>
                                @item.RegisteredUsersCount نفر
                            </span>
                            <span class="text-sm text-gray-600">
                                <i class="far fa-calendar-alt ml-1"></i>
                                @MyDateTime.GetShamsiDateFromGregorian(item.EventStartDate, false)
                                @if (item.EventEndDate.HasValue)
                                {
                                    <span>تا @MyDateTime.GetShamsiDateFromGregorian(item.EventEndDate.Value, false)</span>
                                }
                            </span>
                        </div>
                        <div class="flex justify-end space-x-2 space-x-reverse">
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-800">
                                <i class="fas fa-info-circle"></i> جزئیات
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-yellow-600 hover:text-yellow-800">
                                <i class="fas fa-edit"></i> ویرایش
                            </a>
                            <button class="text-red-600 hover:text-red-800 delete-btn" data-id="@item.Id" data-type="event">
                                <i class="fas fa-trash"></i> حذف
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- نمایش پیام زمانی که کاربری وجود ندارد -->
        @if (!Model.Entities.Any())
        {
            <div class="bg-white shadow rounded-lg overflow-hidden mt-4">
                <div class="p-4 text-center text-gray-600">
                    هیچ کاربری یافت نشد.
                </div>
            </div>
        }


        <!-- صفحه‌بندی -->
        @if (Model.PageCount > 1)
        {
            <div class="mt-6 flex justify-center">
                <nav aria-label="Page navigation">
                    <ul class="pagination flex space-x-1 space-x-reverse">
                        <!-- دکمه قبلی -->
                        @if (Model.PageIndex > 1)
                        {
                            <li class="page-item">
                                <a class="page-link px-3 py-2 border rounded text-gray-700 hover:bg-indigo-50"
                                   href="@Url.Action("Index", "Event", new { area = "AdminPanel", pageId = Model.PageIndex - 1, search = Context.Request.Query["search"] })">
                                    « قبلی
                                </a>
                            </li>
                        }

                        <!-- صفحات -->
                        @for (int i = Model.StartPage; i <= Model.EndPage; i++)
                        {
                            <li class="page-item">
                                <a class="page-link px-3 py-2 border rounded @(i == Model.PageIndex ? "bg-indigo-600 text-white" : "text-gray-700 hover:bg-indigo-50")"
                                   href="@Url.Action("Index", "Event", new { area = "AdminPanel", pageId = i, search = Context.Request.Query["search"] })">
                                    @i
                                </a>
                            </li>
                        }

                        <!-- دکمه بعدی -->
                        @if (Model.PageIndex < Model.PageCount)
                        {
                            <li class="page-item">
                                <a class="page-link px-3 py-2 border rounded text-gray-700 hover:bg-indigo-50"
                                   href="@Url.Action("Index", "Event", new { area = "AdminPanel", pageId = Model.PageIndex + 1, search = Context.Request.Query["search"] })">
                                    بعدی »
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // مدیریت رویداد کلیک برای حذف همایش
            $(document).on('click', '.delete-btn[data-type="event"]', function () {
                var eventId = $(this).data('id');
                Swal.fire({
                    title: 'آیا مطمئن هستید؟',
                    text: "این عمل قابل بازگشت نیست!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'بله، حذف شود!',
                    cancelButtonText: 'انصراف'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.post('/AdminPanel/Event/DeleteEvent/' + eventId, function (response) {
                            if (response.success) {
                                Swal.fire(
                                    'حذف شد!',
                                    response.message,
                                    'success'
                                ).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire(
                                    'خطا!',
                                    response.message,
                                    'error'
                                );
                            }
                        });
                    }
                });
            });

            // جستجوی همایش‌ها
            $('#event-search').on('input', debounce(function () {
                var searchValue = $(this).val().trim().toLowerCase();
                $('#event-container .event-card').each(function () {
                    var title = $(this).find('h3').text().toLowerCase();
                    $(this).toggle(title.includes(searchValue));
                });
            }, 300));
        });

        function debounce(func, wait) {
            let timeout;
            return function () {
                const context = this, args = arguments;
                clearTimeout(timeout);
                timeout = setTimeout(() => func.apply(context, args), wait);
            };
        }
    </script>
}